@model Agenda.Models.Broker
@{
    /**/

    ViewBag.Title = "Ajouter un courtier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/styleAddBroker.css" rel="stylesheet" />

<h1 class="text-uppercase">Ajouter un courtier</h1>

<div class="container text-uppercase">
    <div class="row justify-content-center">
        <div class="col-12">
            @using (Html.BeginForm())
            {
                <div class="form-group text-white">
                    @Html.LabelFor(model => model.LastName)
                    @Html.EditorFor(model => model.LastName, new { HtmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group text-white">
                    @Html.LabelFor(model => model.FirstName)
                    @Html.EditorFor(model => model.FirstName, new { HtmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group text-white">
                    @Html.LabelFor(model => model.PhoneNumber)
                    @Html.EditorFor(model => model.PhoneNumber, new { HtmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group text-white">
                    @Html.LabelFor(model => model.Mail)
                    @Html.EditorFor(model => model.Mail, new { HtmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mail)
                </div>
               <input type = "submit" value = "Envoyer le formulaire" id = "sub" style="float : none; margin: 2rem;">
            }
        </div>
    </div>
</div>
}

